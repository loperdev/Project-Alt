{%- capture quotes -%}
{%- assign section_st = section.settings -%}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
    {%- if section_st.bgimg != blank %} data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>     
    {%- capture style -%} --img_size:{{ section_st.img_size }}px;--icon_cl:{{ section_st.icon_cl }}; --icon_size:{{ section_st.icon_size }}px; --bg:{{ section_st.bbg }}; --br:{{ section_st.br }}px; --border:{{ section_st.box_bdr }};--bpd:{{ section_st.bpd }}px; --fsa:{{ section_st.tfs | minus : 2 }}px;{%- endcapture -%}
	
    <div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}" data-section-id="{{ section.id }}" data-section-style="quote{{ section_st.style }}">
        <div class="quote_wrap quote{{ section_st.style }}" style="{{ style }}">
            {%- if section.blocks.size > 0 -%}
                {%- render 'sec-title' -%}
                {%- capture testimonialdata -%}
                  {%- for block in section.blocks -%}
                    {%- assign blk_st = block.settings -%}
                    {%- assign slide_index = forloop.index0 -%}
                        <div class="{% if section_st.style != '4' %}swiper-slide {% endif %}gitem fckSl{% if section_st.style != '1' %} wd50-md wd33-lg{% endif %}{% if section_st.style == '4' %} wd33-md msitem{% endif %}{% if block.settings.author_pic != blank %} apic{% endif %} {% render 'animate-data', css:true %}" {% render 'animate-data' %} id="{{ block.id }}" data-slide="{{ slide_index }}" {{ block.shopify_attributes }}>
                            <div class="quotes_txt fl f-col f-jcs m_auto w_100 h_100 border {% if section_st.style == '1' or section_st.style == '2' %}tc{% else %}tl{% endif %}" style="--cl:{{ section_st.cl }};"> 
                                {%- if blk_st.image != blank -%}
                                    <div class="quote_img pr of_hidden{% if section_st.style == '3' or section_st.style == '4' %} ml0{% endif %}">
                                        {{ blk_st.image | image_url: width: blk_st.image.width | image_tag: loading:'lazy', class:'imgFt', sizes:'150px', widths:"150,300", alt:blk_st.author }}
                                    </div>
                                {%- endif -%}

								{%- if blk_st.title != blank -%}<div class="mb10 rgTxt {{ section_st.tff }}" style="--fs:{{ section_st.fs }}px;--fsm:{{ section_st.fsm }}px;--fw:{{ section_st.fw }};--lh:{{ section_st.lh }};">{{ blk_st.title }}</div>{% endif %}								
                                {%- if blk_st.text != blank -%}<div class="rte-setting mb20 rgTxt" style="--fs:{{ section_st.tfs }}px;--fsm:{{ section_st.tfsm }}px;--lh:{{ section_st.tlh }};">{{ blk_st.text }}</div>{% endif %}

                                {%- if blk_st.rat -%}
                                    {%- if blk_st.rating == 1 -%}<span class="ratings">{% render 'icon-star1' %}{% render 'icon-star' %}{% render 'icon-star' %}{% render 'icon-star' %}{% render 'icon-star' %}</span>{% endif %}
                                    {%- if blk_st.rating == 2 -%}<span class="ratings">{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star' %}{% render 'icon-star' %}{% render 'icon-star' %}</span>{% endif %}
                                    {%- if blk_st.rating == 3 -%}<span class="ratings">{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star' %}{% render 'icon-star' %}</span>{% endif %}
                                    {%- if blk_st.rating == 4 -%}<span class="ratings">{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star' %}</span>{% endif %}
                                    {%- if blk_st.rating == 5 -%}<span class="ratings">{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}{% render 'icon-star1' %}</span>{% endif %}
                                {%- endif -%}

                                {%- if blk_st.author != blank -%}<div class="author mt10">{{ blk_st.author }}</div>{%- endif -%}

                                {%- assign product = all_products[blk_st.prod] -%}
								{%- if product.title.size > 0 -%}
								<div class="review_product">
									<div class="fl f-aic{% if section_st.style == '1' %} f-col{% endif %}">
										<div class="pr_list_img{% if section_st.style == '1' %} mr mb10{% endif %}">
    										<a class="db grid_img" href="{{ product.url | within: collection }}">
                                                {{ product.featured_image | image_url: width: product.featured_image.width | image_tag: loading:'lazy', width:product.featured_image.width, height:product.featured_image.height, class:'imgFt', sizes:'80px', widths:"100,200,320" }}
    										</a>
										</div>
										<a href="{{ product.url | within: collection }}" class="pr_list_ttl">{{ product.title }}</a>
									</div>
								</div>
								{%- endif -%}
                            </div>
                        </div>
                    {%- endfor -%}
                {%- endcapture -%}

                {%- if section_st.style != '4' -%}
                    <slide-section class="grid swiper{% if section_st.box_shadow %} bx_shadow{% endif %}" data-swiper='{ "slidesPerView":"auto", "loop":{{ section_st.loop }}, {% if section_st.autoplay %}"autoplay":{ "delay":"{{ section_st.speed | times: 1000 }}" },{% endif %} "navigation":{ "nextEl":".swn{{ section.id }}","prevEl":".swp{{ section.id }}" },"pagination":{ "el":".swpg{{ section.id }}","clickable":true }}'>
                        <div class="swiper-wrapper">{{ testimonialdata }}</div>
                        {% render 'swiper-navigation', id:section.id, section_st:section_st %}
                    </slide-section>
                {%- else -%}
                    <grid-masonary class="grid grid-masonary{% if section_st.box_shadow %} bx_shadow{% endif %}">
                        <div class="grid-sizer col-3 pa"></div>
                        {{ testimonialdata }}
                    </grid-masonary>
                {%- endif -%}
            {%- endif -%}
            {%- if section.blocks.size == 0 -%}{%- render 'no-blocks' -%}{%- endif -%}
        </div>
    </div>
</div>
{%- endcapture -%}
{{- quotes | strip_newlines | remove: "  " | remove: "	" -}}
