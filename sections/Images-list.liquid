{%- capture logobar -%}
{%- liquid 
    assign section_st = section.settings
-%}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--icon_bg:{{ section_st.icon_bg }};--rounded:{{ section_st.radius }}px;">     
    <div class="insta_list{% if section_st.sw %} fw-sec{% if section_st.npd %} npd{% endif %}{% else %} page-width{% endif %}" id="carousel-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="carousel">

        {% render 'sec-title' %}		
        {% if section.blocks.size > 0 %}
            {% capture logo_data %}
              {% for block in section.blocks %}
                    <div class="gitem{% if section_st.carousel %} swiper-slide{% endif %} {% render 'animate-data', css:true %}" {% render 'animate-data' %} {{ block.shopify_attributes }}>
                        <div class="h_100 img_{{ section_st.image }}">
                            <a class="fl f-jcc f-aic" {% if block.settings.link != blank %}href="{{ block.settings.link }}" {% if block.settings.newtab %} target="_blank" {% endif %}{% else %}role="link" aria-disabled="true"{% endif %}>
                                {% if block.settings.image != blank %}
                                    {{ block.settings.image | image_url: width: block.settings.image.width | image_tag: loading:'lazy', class:'imgAt', widths:'100,200,300,400,500' }}
                                {% else %}
                                   {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}{{ 'collection-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}  
                                {% endif %}
                                {%- if section_st.icon != blank -%}<span class="pa db tc anim img_icon{% if section_st.image == '3' %} hide{% endif %}"> <img src="{{ section_st.icon | image_url: width: '36' }}" width="16" height="16" alt="{{ section_st.icon.alt }}" /></span> {%- endif -%} 
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% endcapture %}

             {%- capture styles -%}
             --grsp:{{ section_st.gspace | divided_by: 2.0 }}px;--grspm:{{ section_st.gspacem | divided_by: 2.0 }}px;
            {%- endcapture -%}
                              
            {%- if section_st.carousel -%}
                <slide-section class="grid gspace rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} swiper" style="{{ styles }}"
                  data-swiper='{ "slidesPerView":"auto", "loop":{{ section_st.loop }}, {% if section_st.autoplay %}"autoplay":{ "delay":"{{ section_st.speed | times: 1000 }}" },{% endif %} "navigation":{ "nextEl":".swn{{ section.id }}","prevEl":".swp{{ section.id }}" },"pagination":{ "el":".swpg{{ section.id }}","clickable":true }}'>
                    <div class="swiper-wrapper">{{ logo_data }}</div>
                    {% render 'swiper-navigation', id:section.id, section_st:section_st %}
                </slide-section>
            {%- else -%}
                <div class="grid gspace rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} f-jcc" style="{{ styles }}">{{ logo_data }}</div>
            {%- endif -%}
        {% endif %}
        {% if section.blocks.size == 0 %}{% render 'no-blocks' %}{% endif %}
    </div>
</div>
{%- endcapture -%}
{{ logobar | strip_newlines | remove: "  " | remove: "	" }}
