{% schema %}
{
  "name": "Hero Slider Section",
  "settings": [
    /* --- SLIDES --- */
    {
      "type": "image_picker",
      "id": "slide_1",
      "label": "Slide 1 Background"
    },
    {
      "type": "image_picker",
      "id": "slide_2",
      "label": "Slide 2 Background"
    },
    {
      "type": "image_picker",
      "id": "slide_3",
      "label": "Slide 3 Background"
    },

    /* --- OVERLAY CONTROL --- */
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay Gradient Base Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity (%)",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60
    },

    /* --- BADGE --- */
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Premium Cruise Map Collection"
    },
    {
      "type": "color",
      "id": "badge_color",
      "label": "Badge Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "badge_bg",
      "label": "Badge Background Color",
      "default": "rgba(255,255,255,0.1)"
    },

    /* --- HEADING --- */
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading (HTML supported)",
      "default": "Turn Your <br/><span>Journey</span><br>Into Art"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size (px)",
      "min": 20,
      "max": 80,
      "step": 2,
      "default": 48
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading Weight",
      "default": "700",
      "options": [
        { "value": "400", "label": "Normal" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra Bold" }
      ]
    },

    /* --- SUBHEADING --- */
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Transform your cruise memories into stunning, <strong>museum-quality framed maps</strong> that capture every nautical mile of your adventure."
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Subheading Font Size (px)",
      "min": 12,
      "max": 36,
      "step": 1,
      "default": 18
    },

    /* --- BUTTONS --- */
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Design Your Map"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Primary Button Background",
      "default": "#c3cca6"
    },
    {
      "type": "color",
      "id": "primary_button_text_color",
      "label": "Primary Button Text Color",
      "default": "#000000"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "View Gallery"
    },
    {
      "type": "color",
      "id": "secondary_button_border",
      "label": "Secondary Button Border/Text Color",
      "default": "#ffffff"
    },

    /* --- GLASS CARD --- */
    {
      "type": "color",
      "id": "glass_bg",
      "label": "Glass Card Background",
      "default": "rgba(255,255,255,0.1)"
    },
    {
      "type": "range",
      "id": "glass_blur",
      "label": "Glass Card Blur (px)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 14
    },

    /* --- PRICE --- */
    {
      "type": "text",
      "id": "price",
      "label": "Price Amount",
      "default": "£69.99"
    },
    {
      "type": "text",
      "id": "price_note",
      "label": "Price Note",
      "default": "Starting price • Free shipping"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Item",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Material Icon Name",
          "default": "museum"
        },
        {
          "type": "text",
          "id": "feature_title",
          "label": "Feature Title",
          "default": "Museum Quality"
        },
        {
          "type": "textarea",
          "id": "feature_desc",
          "label": "Feature Description",
          "default": "Premium materials and professional framing"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider (Full Control)",
      "category": "Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<style>
  .hero-section {
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    min-height: calc(100vh - 70px);
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #000;
  }
  .hero-slider {
    position: absolute; inset: 0; width: 100%; height: 100%; z-index: 0;
  }
  .hero-slide {
    position: absolute; inset: 0;
    background-size: cover; background-position: center;
    opacity: 0; transform: scale(1);
    animation: fadeZoom 18s infinite ease-in-out;
  }
  .hero-slide:nth-child(1) { animation-delay: 0s; opacity: 1; }
  .hero-slide:nth-child(2) { animation-delay: 6s; }
  .hero-slide:nth-child(3) { animation-delay: 12s; }

  @keyframes fadeZoom {
    0%   { opacity: 0; transform: scale(1); }
    8%   { opacity: 1; transform: scale(1.03); }
    33%  { opacity: 1; transform: scale(1.05); }
    41%  { opacity: 0; transform: scale(1.08); }
    100% { opacity: 0; transform: scale(1); }
  }

  .hero-overlay {
    position: absolute; inset: 0;
    background: linear-gradient(to right, {{ section.settings.overlay_color }} {{ section.settings.overlay_opacity }}%, rgba(0,0,0,0.4));
    z-index: 1;
  }

  .hero-content-wrapper {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1300px;
    margin: 0 auto;
    padding: 3rem 2rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 2.5rem;
    color: #fff;
  }

  .hero-left {
    flex: 1 1 0;
    min-width: 280px;
    max-width: 52%;
  }

  .hero-left .badge {
    background: {{ section.settings.badge_bg }};
    color: {{ section.settings.badge_color }};
    padding: 6px 14px;
    border-radius: 999px;
    font-size: 0.85rem;
    margin-bottom: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .hero-left h1 {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
    margin-bottom: 1.2rem;
  }

  .hero-left p {
    color: {{ section.settings.subheading_color }};
    font-size: {{ section.settings.subheading_size }}px;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-btns {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  .hero-btns a {
    display: inline-block;
    padding: 14px 32px;
    border-radius: 999px;
    font-weight: 600;
    text-decoration: none;
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  .btn-primary {
    background: {{ section.settings.primary_button_bg }};
    color: {{ section.settings.primary_button_text_color }};
  }
  .btn-outline {
    border: 1.5px solid {{ section.settings.secondary_button_border }};
    color: {{ section.settings.secondary_button_border }};
    background: transparent;
  }
  .btn-outline:hover {
    background: {{ section.settings.secondary_button_border }};
    color: #000;
  }

  .hero-right {
    flex: 1 1 0;
    min-width: 280px;
    max-width: 42%;
    display: flex;
    justify-content: flex-end;
  }
  .glass-card {
    width: 100%;
    max-width: 420px;
    background: {{ section.settings.glass_bg }};
    backdrop-filter: blur({{ section.settings.glass_blur }}px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 1.5rem;
    padding: 2rem;
    color: #fff;
  }
  .glass-card h2 {
    font-size: 1.25rem;
    font-weight: 900;
    margin-bottom: 2rem;
  }
  .glass-feature {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.8rem;
  }
  .glass-icon {
    background: rgba(255, 255, 255, 0.08);
    padding: 10px;
    border-radius: 12px;
    width: 40px;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .price-box {
    text-align: center;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    margin-top: 2rem;
    padding-top: 1.5rem;
  }
  .price-box .amount {
    font-size: 2rem;
    font-weight: bold;
    color: #fff;
  }

  @media screen and (max-width: 640px) {
    .hero-content-wrapper {
      padding: 1rem 1.5rem;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .hero-left, .hero-right { max-width: 100%; }
    .hero-right { justify-content: center; }
    .glass-card { margin-top: 2rem; }
  }
</style>
{% endstylesheet %}

<section class="hero-section">
  <!-- Slider -->
  <div class="hero-slider">
    <div class="hero-slide" style="background-image:url('{{ section.settings.slide_1 | image_url }}')"></div>
    <div class="hero-slide" style="background-image:url('{{ section.settings.slide_2 | image_url }}')"></div>
    <div class="hero-slide" style="background-image:url('{{ section.settings.slide_3 | image_url }}')"></div>
  </div>

  <!-- Overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content-wrapper">
    <!-- LEFT -->
    <div class="hero-left">
      {% if section.settings.badge_text != blank %}
      <div class="badge">
        <span class="material-icons">stars</span>
        {{ section.settings.badge_text }}
      </div>
      {% endif %}
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>

      <div class="hero-btns">
        {% if section.settings.primary_button_link %}
        <a href="{{ section.settings.primary_button_link }}" class="btn-primary">{{ section.settings.primary_button_text }}</a>
        {% endif %}
        {% if section.settings.secondary_button_link %}
        <a href="{{ section.settings.secondary_button_link }}" class="btn-outline">{{ section.settings.secondary_button_text }}</a>
        {% endif %}
      </div>
    </div>

    <!-- RIGHT -->
    <div class="hero-right">
      <div class="glass-card">
        <h2>Why Choose Our Maps?</h2>

        {% for block in section.blocks %}
        <div class="glass-feature">
          <div class="glass-icon"><span class="material-icons">{{ block.settings.icon }}</span></div>
          <div>
            <strong>{{ block.settings.feature_title }}</strong>
            <span>{{ block.settings.feature_desc }}</span>
          </div>
        </div>
        {% endfor %}

        <div class="price-box">
          <div class="amount">{{ section.settings.price }}</div>
          <small>{{ section.settings.price_note }}</small>
        </div>
      </div>
    </div>
  </div>
</section>
