{%- assign section_st = section.settings  -%}
<div class="clr-header">
  <div class="password-header">
    {% if section_st.logo %}
      <a href="/" itemprop="url" class="m0">
          {%- assign logo_alt = section_st.logo.alt | default: shop.name | escape -%}
            {% capture sizes %}(max-width: {{ section_st.logowd | times: 2 }}px) 50vw, {{ section_st.logowd }}px{% endcapture %}
            {% capture widths %}{{ section_st.logowd }}, {{ section_st.logowd | times: 1.5 | round }}, {{ section_st.logowd | times: 2 }}{% endcapture %}
            {%- assign logo_ht = section_st.logowd | divided_by: section_st.logo.aspect_ratio -%}
            {{ section_st.logo | image_url: width: 600 | image_tag: class: 'stlogo', widths: widths, height: logo_ht, width: section_st.logowd, alt: logo_alt, sizes: sizes, preload: true }}
      </a>
    {% else %}
    	<h1 class="m0" href="/" itemprop="url"><span class="logo">{{ shop.name }}</span></h1>
    {% endif %}
    {%- if shop.password_message != blank -%}<div class="password-content tc">{{ shop.password_message }}</div>{%- endif -%}

    <div>
      <a href="#LoginModal" class="js-modal-open-login-modal btn">{{ 'general.password_page.password_link' | t }} 
		{% render 'icon-arrowl' %}		  	 		  
	  </a>
    </div>

  </div>
</div>
<div class="password-main h_100 fl f-jcc f-aic" role="main">
        <div class="passCnt tc">  
          <h2 class="password__title mb10">{{ section_st.header }}</h2>
          {% if section_st.hero_dealtimer %}
          	<div class="atCounter fl f-jcc tc ht{{ section.id }} mb20" data-date="{{ section_st.cnt_date }}">
                <span><span class="tm days">00</span>{{ 'date_formats.days' | t }}</span>
                                    <span><span class="tm hours">00</span>{{ 'date_formats.hours' | t }}</span>
                                    <span><span class="tm minutes">00</span>{{ 'date_formats.minuts' | t }}</span>
                                    <span><span class="tm seconds">00</span>{{ 'date_formats.seconds' | t }}</span>
          	</div>
          {% endif %}
          {% if section_st.newsletter_enable %}
              {% form 'customer' %}
                {{ form.errors | default_errors }}
                {% if form.posted_successfully? %}
                  <p class="form-success">{{ 'general.password_page.signup_form_success' | t }}</p>
                {% else %}
                  {% if section_st.newsletter_form_heading != blank %}<p class="nwTxt mb20">{{ section_st.newsletter_form_heading }}</p>{% endif %}
                  <input type="hidden" name="contact[tags]" value="prospect, password page">
                  <label for="email" class="hidden_txt">{{ 'general.password_page.signup_form_email_label' | t }}</label>
                  <div class="ad_inputs fl password_input mb20">
                     <input class="fl1" type="email" name="contact[email]" id="Email" placeholder="{{ section_st.newsletter_placeholder | escape }}">
                     <button type="submit" name="commit" class="btn">{{ section_st.newsletter_button_text | escape }}</button>
                  </div>
                {% endif %}
              {% endform %}
          {% endif %}  
        </div>
</div>
<div class="clr-footer">
  <div class="password-footer tc">  
    {% if section_st.show_share_buttons %}    
    	<p class="mb10">{{ section_st.social_message | escape }}</p>
    	<div class="mb20">{% render 'social-sharing' %}</div>
    {% endif %}    
    
    <div class="admin-login">
      {% if section_st.show_powered_by %}
      	{% capture shopify %}<a class="tdu shopify-link" href="//www.shopify.com" rel="nofollow" target="_blank" title="Create your own online store with Shopify">Shopify</a>{% endcapture %}
      	<p class="mb5"><small>{{ 'general.password_page.powered_by_shopify_html' | t: shopify: shopify }}</small></p>
      {% endif %}
      <small>{{ 'general.password_page.admin_link_html' | t }}</small>
    </div>
  </div>
</div>
<style type="text/css">
  {% if section_st.image != blank %}
  	body, #LoginModal { background:url('{{ section_st.image | image_url: '2000x' }}') no-repeat center {{ section_st.alignment }}/cover {{ section_st.bgclr }}; }
  {% else %}
  	body, #LoginModal { background-color:{{ section_st.bgclr }}; }
  {% endif %}
  
  .password-header { padding:10px 15px; min-height: {{ section_st.header_h }}px; display: flex; justify-content:space-between; max-width:1200px; align-items:center; margin:0 auto;}
  .clr-header { color:{{ section_st.header-text }}; background-color:rgba({{ section_st.header-bg | color_to_rgb | remove:'rgb(' | remove: ')' }},{{ section_st.hdbg_opt }}); }
  
  .password__title { color:{{ section_st.header-ft }}; font-size:{{ section_st.hd2_fs }}px; font-family:var(--{{ section_st.hd2_fs_font }}); font-weight:{{ section_st.hd2_fsw }}; line-height:1.1; margin-bottom:40px; }
  .nwTxt { color:{{ section_st.header-nwft }}; }
  
  @media only screen and (max-width:766px){
    .password__title { font-size:{{ section_st.hd2_fsmb }}px; margin-bottom:25px; }
    .password-header {flex-direction:column; padding:15px;}
  } 
  .atCounter { margin-bottom:30px; }
  .atCounter > span { font-size:13px; line-height:1.2; border-radius:{{ section_st.b_rad }}px; text-transform:uppercase; font-weight:600; padding:10px 12px;
    color:{{ section_st.cnt_text }}; background:{{ section_st.cnt_bg }}; border:1px dashed {{ section_st.cnt_bdr }}
    {% if section_st.b_rad == 50 %} padding:8px; height:75px; width:75px; {% endif %}
  }
  
  .atCounter .tm { font-size:22px; font-weight:700; }
  
  .password-footer {max-width:1200px; margin:0 auto; min-height:80px; display:flex; flex-direction:column;} 
  .admin-login a {color:{{ section_st.footer-text }};}
  .password-footer .share-title {display:none;}
  .clr-footer { color:{{ section_st.footer-text }}; padding:20px 15px; background:rgba({{ section_st.footer-bg | color_to_rgb | remove:'rgb(' | remove: ')' }},{{ section_st.ftbg_opt }});}
  
  .passCnt { position:relative; z-index:2; padding:50px 10px; max-width:600px; margin:auto; } 
  .passCnt .errors {max-width:300px; margin:0 auto; }
</style>
{% schema %}
  {
    "name": "Password Page",
	"class": "fl f-col h_100",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image",
		"info": "Recommended width 2000 x 1000 px"
      },
      {
        "type": "select",
        "id": "alignment",
        "label": "Image Alignment",
        "default": "center",
        "options": [
          { "value": "top", "label":"Top" },
          { "value": "center", "label": "Middle" },
          { "value": "bottom", "label": "Bottom" }
        ]
      },
      {
        "type": "color",
        "id": "bgclr",
        "label": "Background",
        "default": "#fff"
      },
	  {
		"type":"header",
		"content": "Header"
	  },
	  {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logowd",
        "min": 50,
        "max": 500,
        "step": 5,
        "label": "Logo Width",
        "default": 120
      },
	  {
        "type": "text",
        "id": "header_h",
        "label": "Header minimum height (in pixels)",
        "default": "90"
      },
	  {
        "type": "color",
        "id": "header-text",
        "label": "Text",
        "default": "#111"
      },
	  {
        "type": "color",
        "id": "header-bg",
        "label": "Background",
        "default": "#f5f5f5"
      },
      {
          "type": "range",
          "id": "hdbg_opt",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "label": "Background Opacity",
          "unit": "%",
          "default": 0.9
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "text",
        "id": "header",
        "label": "Heading",
        "default": "Coming Soon"
      },
	  {
        "type": "color",
        "id": "header-ft",
        "label": "Color",
        "default": "#000"
      },
      {
        "type": "select",
        "id": "hd2_fs_font",
        "label": "Title Font",
        "default": "ft1",
        "options": [
          {
            "value": "ft1",
            "label": "Font 1"
          },
          {
            "value": "ft2",
            "label": "Font 2"
          },
          {
            "value": "ft3",
            "label": "Font 3"
          }
        ]
      },
      {
        "type": "select",
        "id": "hd2_fsw",
        "label": "Font Weight",
        "default": "700",
        "options": [
          { "value":"300", "label":"Light" },
          { "value":"400", "label":"Regular" },
          { "value":"600", "label":"Semi Bold" },
          { "value":"700", "label":"Bold" }
        ]
      },		
      {
        "type": "range",
        "id": "hd2_fs",
        "label": "Font Size",
        "default": 24,
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px"
      },		
      {
        "type": "range",
        "id": "hd2_fsmb",
        "label": "Font Size (Mobile)",
        "default": 20,
        "min": 10,
        "max": 60,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "newsletter_enable",
        "label": "Show newsletter signup",
        "default": true
      },
      {
        "type": "textarea",
        "id": "newsletter_form_heading",
        "label": "Newsletter Text",
        "default": "Be the first to know when we launch.",
        "info": "[Tell your visitors about a launch day discount](https://www.shopify.com/blog/15514000-14-ways-to-use-offers-coupons-discounts-and-deals-to-drive-revenue-and-customer-loyalty)."
      },
	  {
        "type": "color",
        "id": "header-nwft",
        "label": "Color",
        "default": "#000"
      },
      {
        "type": "text",
        "id": "newsletter_placeholder",
        "label": "placeholder text",
        "default": "Email address"
      },
      {
        "type": "text",
        "id": "newsletter_button_text",
        "label": "Button text",
        "default": "Notify me"
      },
	  {
        "type": "header",
        "content": "Countdown Timer"
      },
 	  {
		"type":"checkbox",
		"id":"hero_dealtimer",
		"label":"Show?",
		"default": false,
		"info":"please click save button to view"
	  },
	  {
        "type": "text",
        "id": "cnt_date",
        "label": "Enter Date",
        "info": "Date Format should be Month\/Day\/Year.i.e mm\/dd\/year, 11\/25\/2020",
        "default": "12\/20\/2020"
      },
      {
        "type": "color",
        "id": "cnt_bg",
        "label": "Background",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "cnt_text",
        "label": "Text",
        "default": "#eee"
      },
      {
        "type": "color",
        "id": "cnt_bdr",
        "label": "Border",
        "default": "#000"
      },
	  {
          "type": "range",
          "id": "b_rad",
          "min": 0,
          "max": 50,
          "step": 1,
          "label": "Border Radius",
          "unit": "px",
          "default": 0
      },
	  {
		"type":"header",
		"content": "Footer"
	  },
	   {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
      {
        "type": "text",
        "id": "social_message",
        "label": "Social sharing heading",
        "default": "Spread the word"
      },
		{
        "type": "checkbox",
        "id": "show_powered_by",
        "label": "Show powered by text?",
        "default": false
      },
	  {
        "type": "color",
        "id": "footer-text",
        "label": "Text",
        "default": "#111"
      },  
	  {
        "type": "color",
        "id": "footer-bg",
        "label": "Background",
        "default": "#f5f5f5"
      },
      {
          "type": "range",
          "id": "ftbg_opt",
          "min": 0,
          "max": 1,
          "step": 0.1,
          "label": "Background Opacity",
          "unit": "%",
          "default": 0.9
      }
    ]
  }
{% endschema %}
