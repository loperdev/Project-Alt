{%- liquid 
    assign section_st = section.settings
    assign page_width = settings.cntwd | append: 'px'
    if section_st.sw
        assign page_width = '100vw'
    endif
-%}
{%- capture info_banner -%}  
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
   {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>
        <div class="{% if section_st.sw %}fw-sec{% if section_st.npd %} npd{% endif %}{% else %}page-width{% endif %}">
            <div class="ft_row fl f-aist f-jcsb w_100 row-{{ section.id }} f-col f-row-md brad of_hidden"  style="--rounded:{{ section_st.sbrad }}px;--bg:{% if section_st.tbgg != blank %}{{ section_st.tbgg }}{% else %}{{ section_st.tbg }}{% endif %};--mwd:{{ section_st.image.width }}px;">				
				<div class="fl fl1 f-aic jcc tc{% if section_st.layout == 'right' %} order2-md{% endif %} w_100 of_hidden {% render 'animate-data', css:true %}" {% render 'animate-data' %}>
                    {% if section_st.image != blank %}
                        {%- capture sizes -%} (min-width:1024px) calc({{ page_width }} / 2),(min-width:768px) calc(100vw / 2), calc(100vw - 30px){%- endcapture -%}
                        {% if section_st.link != blank %}<a class="db w_100" href="{{ section_st.link }}">{% endif %}
                            {{ section_st.image | image_url: width: section_st.image.width | image_tag: loading:'lazy', width:section_st.image.width, height:section_st.image.height, class:'h_auto', sizes:sizes, widths:"1500,1200,900,740,560,400" }}
                        {% if section_st.link != blank %}</a>{% endif %}
                    {% else %}
                        {{ 'blog-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                </div>				
                <div class="row_text fl fl1 of_hidden w_100 {{ section_st.talignv }}" style="--cl:{{ section_st.cl }};--cwd:{{ section_st.maxwd }}%;">
                     <div class="row-text {{ section_st.talign }}{% if section_st.txtpd %} nobg{% endif %} {% render 'animate-data', css:true %}" {% render 'animate-data' %}>
						
                        {% if section_st.title != blank %}<h3 class="rgTxt mb15 {{ section_st.tff }}" style="--fs:{{ section_st.fs }}px;--fsm:{{ section_st.fsm }}px;--fw:{{ section_st.fw }};--lh:{{ section_st.lh }};">{{ section_st.title }}</h3>{% endif %}
                        {% if section_st.text != blank %}<div class="rgTxt rte mb30" style="--fs:{{ section_st.tfs }}px;--fsm:{{ section_st.tfsm }}px;--lh:{{ section_st.tlh }};">{{ section_st.text }}</div>{% endif %}

                        {% if section.blocks.size > 0 %}
                        <ul class="grid {{ section_st.style }} rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }}{% if section_st.talign == 'tc' %} tc{% endif %}">
                            {% for block in section.blocks limit: section.blocks.size %}
                                {%- assign block_st = block.settings -%}
                                <li class="rgTxt gitem mb25" {{ block.shopify_attributes }} style="--fs:{{ section_st.ftfs }}px;--fsm:{{ section_st.ftfsm }}px;">
                                    <div class="{% if section_st.style == 'stl2' %} fl{% elsif section_st.style == 'stl3'%} fl f-aic{% endif %}">                                          
                                        {% if section_st.showicn %}
                                        <div class="at_box_icons{% if section_st.style == 'stl1' %} mb15{% else %} mt2 mr15{% endif %}" style="--icons:{{ section_st.icns }}px;--iconsm:{{ section_st.icnsm }}px;">
                                            {% if block_st.image != blank %}
                                                {% assign img_alt = block_st.image.alt | default: block_st.title | escape %}
                                                {% capture icnsizes %}((min-width:1024px) {{ section_st.icns }}px, {{ section_st.icnsm }}px{% endcapture %}
                                                {% capture widths %}{{ section_st.icns }}, {{ section_st.icns | times: 1.5 | round }}, {{ section_st.icns | times: 2 }}{% endcapture %}
                                                {{ block_st.image | image_url: width:block_st.image.width | image_tag: loading:'lazy', width:section_st.icns, height:section_st.icns, class:'imgFl', sizes:icnsizes, widths:widths, alt: img_alt }}
                                            {%- else -%}
                                                <svg class="iconph" xmlns="http://www.w3.org/2000/svg" width="256px" height="256px" viewBox="0 0 256 256"><polygon points="127.997,239.248 255,16.752 179.3,16.767 100.177,155.267 30.775,33.679 65.334,33.679 105.458,103.75 114.998,87.999 74.331,16.752 1,16.752 99.949,190.107 189.239,33.679 225.335,33.679 128.056,204.112 117.638,185.902 107.553,203.606" fill="{{ section_st.cl }}"/></svg>
                                            {%- endif -%}
                                        </div>
                                        {% endif %}                                                                                                        
                                        <div class="fl1">
                                            {% if block_st.title %}<div class="rgTxt mb5" style="--fs:{{ section_st.fttfs }}px;--fsm:{{ section_st.fttfsm }}px;--lh:{{ section_st.ftlh }};--fw:{{ section_st.ftfw }};">{{ block_st.title }}</div>{% endif %}
                                            {% if section_st.style != 'stl3' and block_st != blank %}{{ block_st.text }}{% endif %}
                                        </div>                              
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <br />
						{% endif %}
                        {% if section_st.btn != blank and section_st.link != blank %}
                            <a href="{{ section_st.link }}" class="btn {{ section_st.btn-size }} {{ section_st.btn-style }}">{{ section_st.btn }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
</div>
{%- endcapture -%}
{{ info_banner | strip_newlines | remove: "  " | remove: "	" }}
