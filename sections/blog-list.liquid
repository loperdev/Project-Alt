{%- capture featured_blog -%}
{%- liquid
    assign section_st = section.settings
    assign page_width = settings.cntwd | append: 'px'
    if section_st.sw
        assign page_width = '100vw'
    endif
-%}
{%- capture sizes -%}
  (min-width:1024px) calc(({{ page_width }} - {{ 30 | times: section_st.grid | minus:30 }}px) / {{ section_st.grid }}),(min-width:768px) calc((100vw - {{ 15 | times: section_st.gridtb | minus:15 }}px) / {{ section_st.gridtb }}), calc((100vw - {{ 10 | times: section_st.gridmb | minus:10 }}px) / {{ section_st.gridmb }})
{%- endcapture -%}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"  
   {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>
	<div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}" id="blogSlider-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="carousel">
        {% render 'sec-title' %}
        {%- assign blog = blogs[section_st.blog] -%}
        {%- capture blog_data -%}
          {%- if section_st.blog != blank and section_st.blog.articles_count > 0 -%}
                    {% for article in blog.articles limit: section_st.limit %}
                        <div class="{% if section_st.carousel %}swiper-slide{% endif %} gitem {% render 'animate-data', css:true %}" {% render 'animate-data', i:forloop.index %}>{% render 'blog-card-grid', blog: blog, article: article, section_st:section_st, sizes:sizes %}</div>
                    {% endfor %}
                {% else %}
                    {% for i in (1..section_st.limit) %}
                        <div class="swiper-slide gitem {% render 'animate-data', css:true %}" {% render 'animate-data', i:forloop.index %}>
                            <div class="wrap-blog pr brad of_hidden {{ section_st.blog_align }} of_hidden" style="--rounded:{{ section_st.bbrad }}px">
                                <a class="db pr of_hidden brad mb20" href="{{ article.url }}" style="padding-bottom:{{ section_st.img_ratio }}%;--rounded:{{ section_st.bbrad }}px;" title="{{ article.title | escape }}">
                                    {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}{{ 'blog-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg imgFt' }}
                                </a>
                                <div class="blogInr {{ section_st.blog_align }}">
                                    <{{ section_st.htag }} class="blogTtl rgTxt mb10 {{ section_st.tff }}{% if section_st.tcase %} ttu{% endif %}"><a href="#">{{ 'homepage.onboarding.blog_title' | t }}</a></{{ section_st.htag }}>
                                    {% if section_st.author %}<span class="clr_body">{{ 'homepage.onboarding.blog_author' | t }}</span>{% endif %}
                                    {% if section_st.des %}<div class="rte mb25">{{ 'homepage.onboarding.blog_excerpt' | t }}</div> {% endif %}
                                    {% if section_st.more %}<p class="mb10"><a href="{{ article.url }}" class="btnLink">{{ 'blogs.article.read_more' | t }}</a></p>{% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
        {%- endcapture -%}
        {%- capture styles -%}
            --grsp:{{ section_st.gspace | divided_by: 2.0 }}px;--grspm:{{ section_st.gspacem | divided_by: 2.0 }}px;
            --fs:{{ section_st.fs }}px;--fsm:{{ section_st.fsm }}px;--lh:{{ section_st.lh }};--fw:{{ section_st.fw }};
        {%- endcapture -%}

        {%- if section_st.carousel -%}
            <slide-section class="homeblog grid gspace blog{{ section_st.grids }} rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} grid--blog swiper" style="{{ styles }}"
              data-swiper='{ "slidesPerView":"auto", "loop":{{ section_st.loop }}, {% if section_st.autoplay %}"autoplay":{ "delay":"{{ section_st.speed | times: 1000 }}" },{% endif %} "navigation":{ "nextEl":".swn{{ section.id }}","prevEl":".swp{{ section.id }}" },"pagination":{ "el":".swpg{{ section.id }}","clickable":true }}'>
              <div class="swiper-wrapper">{{ blog_data }}</div>
              {% render 'swiper-navigation', id:section.id, section_st:section_st %}
            </slide-section>
        {%- else -%}
            <div class="homeblog grid gspace blog{{ section_st.grids }} rwcols-{{ section_st.gridmb }} rwcols-md-{{ section_st.gridtb }} rwcols-lg-{{ section_st.grid }} grid--blog" style="{{ styles }}">{{ blog_data }}</div>                    
        {%- endif -%}
        {% if section_st.viewall != blank %}<div class="tc mt20"><a href="{{ blog.url }}" class="btn {{ section_st.btn-style }} {{ section_st.btn-size }}">{{ section_st.viewall }}</a></div>{% endif %}
    </div>
</div>
{%- endcapture -%}
