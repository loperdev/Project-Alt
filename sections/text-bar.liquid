{% assign section_st = section.settings %}
{%- capture store_features -%}
{%- capture style -%}
 --grsp:{{ section_st.col-gap | divided_by: 2.0 }}px;--grspm:{{ section_st.row-gap | divided_by: 2.0 }}px;
  --cl:{{section_st.cl }};--fs:{{ section_st.fs }}px;--lh:{{ section_st.lh }};--fsm:{{ section_st.fsm  }}px;--icons:{{ section_st.icns }}px;--iconsm:{{ section_st.icnsm }}px;--box_bg:{{ section_st.boxbg }};--border:{{ section_st.bdr }};--border_hover:{{ section_st.bdr | color_darken:5 }};--brad:{{ section_st.brad }}px;    	
{%- endcapture -%}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"  	
   {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>
    <div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}">   
        {% render 'sec-title' %}
        <div class="grid gspace" style="{{ style }}">
            {% for block in section.blocks limit: section.blocks.size %}
                {%- assign blk_st = block.settings -%}
                {%- capture block_style -%}
                  --cl:{{blk_st.cl }};--fs:{{ section_st.fs }}px;--lh:{{ section_st.lh }};--fsm:{{ section_st.fsm  }}px;--box_bg:{% if blk_st.boxbgg != blank %}{{ blk_st.boxbgg }}{% else %}{{ blk_st.boxbg }}{% endif %};--border:{{ blk_st.bdr }};--btn:{{ blk_st.btn-cl }};--btnbg:{{ blk_st.btn-bg }};--brds:{{ blk_st.bdr-style }};--brad:{{ blk_st.brad }}px;    	
                {%- endcapture -%}
                <div class="gitem {{ blk_st.width }}-md rgTxt {% render 'animate-data', css:true %}" {% render 'animate-data' %} {{ block.shopify_attributes }}>
                    <div class="txt_box fl f-aic f-col f-row-md" style="{{ block_style }}">
                        <div class="fl1{% if blk_st.btn == blank and blk_st.url == blank %} tc{% endif %}">
                            {% if blk_st.title != blank %}<{{ section_st.htag }} class="{{ section_st.tff }} rgTxt {% if section_st.style == 'stl1' %}mb5{% else %}mb0{% endif %}" style="--fs:{{ section_st.tfs }}px;--fsm:{{ section_st.tfsm }}px;--fw:{{ section_st.tfw }};">{{ blk_st.title }}</{{ section_st.htag }}>{% endif %}
                            {% if blk_st.text != blank %}<div class="rgTxt mt5">{{ blk_st.text }}</div>{% endif %}
                        </div>
                        {% if blk_st.btn != blank and blk_st.url != blank %}
							<a class="btn {{ blk_st.btn-size }}" {%  if blk_st.newtab1 %}target="_blank"{% endif %} href="{{ blk_st.url }}">{{ blk_st.btn }}</a>
						{% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if section.blocks.size == 0 %}{% render 'no-blocks' %}{% endif %}
    </div>
</div>
{%- endcapture -%}
{{ store_features | strip_newlines | remove: "  " | remove: "	" }}
