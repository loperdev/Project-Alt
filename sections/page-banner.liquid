 {% assign section_set = section.settings %}
{%- capture page_banner -%}
            <div class="sec_cov npd"  style="--sbg:{% if section_set.bgg != blank %}{{ section_set.bgg }}{% else %}{{ section_set.bg }}{% endif %};">   
            {%- liquid
                assign banner_img = section_set.image
                assign banner_imgm = section_set.mb_image
                assign banner_imgm_srcset = banner_imgm | image_url: width: banner_imgm.width | image_tag: widths: '360,480,760' | split: 'srcset="' | last | split: '"' | first
            -%}
            {% if section_set.image != blank %}
              <picture class="overlay" style="--overlay:{{ section_set.overlay | color_modify: 'alpha', section_set.overlay_op }};">
                  {% if section_set.mb_image != blank %}
                      <source media="(max-width: 767px)" srcset="{{ banner_imgm_srcset }}" width="{{ banner_imgm.width }}" height="{{ banner_imgm.height }}">
                  {% endif %}
                  {{ banner_img | image_url: width: banner_img.width | image_tag: class:'imgFt heroImg', width:banner_img.width, height:banner_img.height, widths:"400,600,800,1000,1200,1400,1600,2000,2400,3000" }}
              </picture>
            {% endif %}
            {% if section.blocks.size > 0 %}
                <div class="hero_wrap fl{% if section_set.text-align %} f-jcc tc{% endif %} f-aic m_auto" style="--mht:{{ section_set.hit }}px;--mhtt:{{ section_set.hitt }}px;--mhtm:{{ section_set.hitm }}px;--mwd:{{ section_set.cntwd }}px;">
                    <div class="pr zi1 {% render 'animate-data', css:true %}">
                        {% for block in section.blocks %}
                            {% if block.type == 'title' %}
                                <{{ block.settings.htag }} class="rgTxt {{ block.settings.tff }} mb{{ block.settings.mbm }} mb{{ block.settings.mb }}-md{% if block.settings.tuu %} ttu{% endif %}" style="--fs:{{ block.settings.fts }}px;--fsm:{{ block.settings.ftsm }}px;--fw:{{ block.settings.fw }};--cl:{{ block.settings.cl }};" {{ block.shopify_attributes }}>{{ page.title }}</{{ block.settings.htag }}>
                            {% elsif block.type == 'text' %}
                                <div class="rgTxt mb{{ block.settings.mbm }} mb{{ block.settings.mb }}-md{% if section_set.hidemb %} hide-sm{% endif %}" style="--fs:{{ block.settings.fs }}px;--fsm:{{ block.settings.fsm }}px;--lh:{{ block.settings.lh }};--cl:{{ block.settings.cl }};" {{ block.shopify_attributes }}>{{ block.settings.title }}</div>
                            {% endif %}
                        {% endfor %}          
                    </div>
                </div>
            {% endif %}
        </div>
{%- endcapture -%}
{{ page_banner | strip_newlines | remove: "  " | remove: "	" }}
