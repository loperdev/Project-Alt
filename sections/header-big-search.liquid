{%- liquid
    assign sec_st = section.settings

    assign cnt_width = settings.cntwd | append: 'px'
    if sec_st.sw
        assign cnt_width = '100vw'
    endif
    assign is_rtl = false
    assign list_rtl = 'ar,dv,ha,he,ku,fa,ur,ug' | split: ','
    assign pm_left = 'left'
    assign pm_right = 'right'
    if list_rtl contains request.locale.iso_code or settings.rtl
        assign is_rtl = true
        assign pm_left = 'right'
        assign pm_right = 'left'
    endif   
    assign logo = sec_st.logo
   
-%}

{%- capture sec_styles -%}
{%- style -%}
  .big-search {
    --hdrHt:{{ sec_st.ht }}px;--hdrHtm:{{ sec_st.htm }}px;--hdrSp:{{ sec_st.head_space }}px;--logowd:{{ sec_st.logowd }}px;--logowdm:{{ sec_st.logowdm }}px;
    {%- if sec_st.bgimg != blank -%}
        background:{{ sec_st.bg }} url({{ sec_st.bgimg | image_url: width:sec_st.bgimg.width }}) {{ sec_st.bgrepeat }} {{ sec_st.bgposition | replace:"_", " " }}/{{ sec_st.bgsize }};
    {%- elsif sec_st.bgg != blank -%}
        background:{{ sec_st.bgg }};
    {%- else -%}
        background-color:{{ sec_st.bg }};
    {%- endif -%}
    {%- if sec_st.hdrbd -%}
        border-bottom:1px solid {{ sec_st.hdrbd_cl }};
    {%- endif -%}
    --cl:{{ sec_st.cl }};--clh:{{ sec_st.clh }};--icns:{{ sec_st.icon }}px;--icnsm:16px;--fs:{{ sec_st.fs }}px;
  }

  {%- if sec_st.cntlogo -%}
      .mbnavCol { min-width:35px; margin-{{ pm_left }}:-5px; }  @media only screen and (max-width:1024px){ .icons-col {flex:1;} }
  {%- else -%}
      .navToggle { margin-{{ pm_right }}:-5px; }
      .icons-col { margin-{{ pm_left }}:auto; }
  {%- endif -%}

  {%- if sec_st.stype == "1" -%}
    @media only screen and (max-width:1024px){
      .main-search { order:3; width:100%; flex:auto; margin:5px 0 10px; }
      .searchDrawer .sDrawer, .searchDrawer .rgTxt.hide-lg { display:none; }
    }
  {%- endif -%}
  {%- if sec_st.icntyp == '3' -%}
  .cartCount.pp {margin: -2px 0 0 4px;}  
  {%- endif -%}    
  {%- if sec_st.catnav -%}
    .catMenu { padding:{{sec_st.ttlpd}}px 0; }
    .catTtl { color:{{ sec_st.ctcl }}; font-size:{{ sec_st.ctfs }}px; font-weight:{{ sec_st.ctfw }}; line-height:1; cursor:pointer; padding-right:25px; border-right:1px solid {{ sec_st.ctsp }}; }
    .catTtl:hover { color:{{ sec_st.ctclh }}; }
    .catnav,
    .catnav .subLinks { opacity:0; visibility:hidden; top:120%; {{ pm_left }}:0; width:280px; padding:15px 25px; background-color:{{ sec_st.ctdbg }}; border-radius:0 0 {{ sec_st.ctdbdr }}px {{ sec_st.ctdbdr }}px; box-shadow:0 0 15px #00000010; transition:all .3s ease-in-out; }
    .catMenu:hover .catnav { opacity:1; visibility:visible; top:100%; }
    .catnav > li:not(:last-child) { border-bottom:1px solid {{ sec_st.ctdbd }}; }
    .catnav a { color:{{ sec_st.ctdcl }}; font-size:{{ sec_st.ctdfs }}px; font-weight:{{ sec_st.ctdfw }}; padding:10px 0; }
    .catnav a:hover { color:{{ sec_st.ctdclh }}; }
    .catnav .img { width:var(--img); height:var(--img); border-radius:{{ sec_st.icnrad }}px; position:relative; overflow:hidden; }

    .catnav .subLinks { position:absolute; top:10%; left:100%; width:600px; min-height:100%; padding:25px; align-content:flex-start; }
    .catnav li:hover > .subLinks { opacity:1; visibility:visible; top:0; }
  {%- endif -%}
{%- endstyle -%}
{%- endcapture -%}
{{- sec_styles | strip_newlines | remove: '  ' -}}

{%- capture logo -%}
<div class="header-logo">
  <a href="{{ routes.root_url }}" itemprop="url" class="hdr_logo_lnk" title="{{ shop.name }}">
    {%- assign logo_alt = logo.alt | default: shop.name | escape -%}
    {%- capture sizes -%}(max-width: {{ sec_st.logowd | times: 2 }}px) 50vw, {{ sec_st.logowd }}px{%- endcapture -%}
    {% capture widths -%}{{ sec_st.logowd }}, {{ sec_st.logowd | times: 1.5 | round }}, {{ sec_st.logowd | times: 2 }}{%- endcapture -%}  
    {%- if sec_st.logo != blank -%}
        {%- assign logo_ht = sec_st.logowd | divided_by: sec_st.logo.aspect_ratio -%}
        {{ sec_st.logo | image_url: width: 600 | image_tag: class: 'imgAt stlogo db fw700', widths: widths, height: logo_ht, width: sec_st.logowd, alt: logo_alt, sizes: sizes, preload: true }}
    {%- else -%}
        {{ shop.name }}
    {%- endif -%}
  </a>
</div>
{%- endcapture -%}

