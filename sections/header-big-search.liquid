{%- capture site_header -%}
    <header id="header" class="fl f-aic pr main_hdr gap{% if sec_st.stype == "1" %} f-wrap{% endif %}{% if sec_st.sw %} fw-sec{% else %} page-width{% endif %}"
      data-sticky="{{ sec_st.sticky_type }}" data-section-id="header" style="--gap:{{ sec_st.gap }}px;--gapm:5px;">
        <div class="fl1 fl f-aic mbnavCol hide-lg{% if sec_st.cntlogo %} cnt{% else %} hide{% endif %}">
            {{ nav_toggle }}
            {%- if settings.enable_search and sec_st.cntlogo and sec_st.stype == "2" -%}
              <a class="hdicon searchIcn" href="{{ routes.search_url }}" title="{{ 'sections.header.search' | t }}"><svg class="at-icon"><use xlink:href="#icon-search"></use></svg></a>
            {%- endif -%}
        </div>

      {{ logo }}

      {%- if settings.enable_search -%}
        <div class="fl fl1 main-search searchinline{% if sec_st.stype == "2" %} hide-sm hide-md{% endif %}">
          {%- render 'search-form', form_class: 'hdSearch' -%}
        </div>
      {%- endif -%}
        <div class="fl f-jce f-aic icons-col">
          {%- if sec_st.stype == "2" and sec_st.cntlogo == false -%}
            <a class="hdicon searchIcn hide-lg" href="{{ routes.search_url }}" title="{{ 'sections.header.search' | t }}">
              <svg class="at-icon{% if sec_st.icntyp == '3' %} hide-lg{% endif %}"><use xlink:href="#icon-search"></use></svg>
              <p class="m0 hide">{{ 'sections.header.search' | t }}</p>
            </a>
          {%- endif -%}

          {%- if shop.customer_accounts_enabled -%}
            <a class="hdicon user-menu" href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" title="{{ 'sections.header.account' | t }}">
              {%- render 'icon-account', icntyp: sec_st.icntyp -%}
              <p class="m0{% if sec_st.icntyp == '1' %} hide{% else %} hide-sm hide-md{% endif %}{% if sec_st.icntyp == '2' %} pdt5{% endif %}">{{ 'sections.header.account' | t }}</p>
            </a>
          {%- endif -%}

          {%- if settings.wishlist -%}
            <a class="hdicon" href="{{ pages[settings.wishlist_page].url }}" title="{{ 'sections.header.wishlist' | t }}">
              <svg class="at-icon{% if sec_st.icntyp == '3' %} hide-lg{% endif %}"><use xlink:href="#icon-wishlist"></use></svg>
              {%- if sec_st.icntyp != '3' -%}<b id="wishlistItems" class="cartCount pp">0</b>{%- endif -%}
              <p class="m0{% if sec_st.icntyp == '1' %} hide{% else %} hide-sm hide-md{% endif %}{% if sec_st.icntyp == '2' %} pdt5{% endif %}">{{ 'sections.header.wishlist' | t }}</p>
            </a>
          {%- endif -%}

          {%- unless settings.catalog-mode -%}
              <a href="{{ routes.cart_url }}" class="hdicon" id="cartLink" title="{{ 'sections.header.cart' | t }}">
                <svg class="at-icon{% if sec_st.icntyp == '3' %} hide-lg{% endif %}"><use xlink:href="#icon-cart"></use></svg>
                {% if sec_st.icntyp != '3' %}<b id="cart-icon-bubble" class="cartCount pp">{{ cart.item_count }}</b>{% endif %}
                <p class="m0{% if sec_st.icntyp == '1' %} hide{% else %} hide-sm hide-md{% endif %}{% if sec_st.icntyp == '2' %} pdt5{% endif %}">{{ 'sections.header.cart' | t }}{% if sec_st.icntyp == '3' %}<b id="cart-icon-bubble" class="cartCount pp">{{ cart.item_count }}</b>{% endif %}</p>
              </a>
          {%- endunless -%}

          {%- unless sec_st.cntlogo -%}{{ nav_toggle }}{%- endunless -%}
        </div>
    </header>
    <nav id="main_navwr" class="hide-sm hide-md" role="navigation">
      <div class="fl col-gap{% if sec_st.sw %} fw-sec{% else %} page-width{% endif %}" style="--gap:15px">
        {%- if sec_st.catnav -%}
          <div class="catMenu pr fl">
            <div class="catTtl fl f-aic anim">
              <svg class="at-icon mr10" style="--icns:14px;" viewBox="0 0 464.205 464.205" xmlns="http://www.w3.org/2000/svg"><g><g id="grip-solid-horizontal_1_"><path d="m435.192 406.18h-406.179c-16.024 0-29.013-12.99-29.013-29.013s12.989-29.013 29.013-29.013h406.18c16.023 0 29.013 12.99 29.013 29.013-.001 16.023-12.99 29.013-29.014 29.013z"/><path d="m435.192 261.115h-406.179c-16.024 0-29.013-12.989-29.013-29.012s12.989-29.013 29.013-29.013h406.18c16.023 0 29.013 12.989 29.013 29.013s-12.99 29.012-29.014 29.012z"/><path d="m435.192 116.051h-406.179c-16.024 0-29.013-12.989-29.013-29.013s12.989-29.013 29.013-29.013h406.18c16.023 0 29.013 12.989 29.013 29.013s-12.99 29.013-29.014 29.013z"/></g></g></svg>
              {{ 'sections.navigation.browse_categories' | t }}
              <svg class="at-icon arw ml5"><use xlink:href="#icon-arrow"></use></svg>
            </div>
            <ul class="catnav pa" style="--img:{{ sec_st.icnm }}px;">
              {%- for link in linklists[sec_st.catmenu].links -%}{% render 'cat-links', link: link, sec_st:sec_st %}{%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
        {%- render 'navigation', sec_st:sec_st, secblk:section.blocks, cnt_width:cnt_width -%}
