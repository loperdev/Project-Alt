{%- capture richtext -%}
{% assign section_st = section.settings %}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{%  if section_st.ganim %} gr_bg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--as:{{ section_st.animsp }}s;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"  	
  {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>  
	<div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %}{% unless section_st.lefta %} tc{% endunless %}">
		{% if section_st.image != blank %}
            {{ section_st.image | image_url: width:section_st.image.width | image_tag: loading:'lazy', class:'imgAt', widths:"180,320,400,560,740,900,1200,1600,2000" }}
		{%- endif -%}
		<div class="richtext m_auto w_100 {% render 'animate-data', css:true %}" {% render 'animate-data' %} style="--mwidth:{{ section_st.maxwd }}px;">
			{% for block in section.blocks %}
              {% assign blk_st = block.settings %}
				{% case block.type %}
                  
                {%  when 'heading' %}
                 <{{ blk_st.htag }} class="rgTxt {{ blk_st.tff }} mb{{ blk_st.mb }}"  style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};">{{ blk_st.title }}</{{ blk_st.htag }}>
   
				{%  when 'text' %}
					<div class="rgTxt {{ blk_st.tff }} mb{{ blk_st.mb }}"  style="--cl:{{ blk_st.cl }};--fs:{{ blk_st.fs }}px;--fsm:{{ blk_st.fsm }}px;--fw:{{ blk_st.fw }};--lh:{{ blk_st.lh }};">{{ blk_st.ttl }}</div>
                {% when 'countdown' %}
                    <countdown-time class="atCounter box_timer fl f-jcc tc ttu mb{{ blk_st.mbm }} mb{{ blk_st.mb }}-md" data-date="{{ blk_st.date }}" style="--cl:{{ blk_st.cl }};--bg:{{ blk_st.bg }};--border:{{ blk_st.bdr }};--rounded:{{ blk_st.radius }}px;--fs:{{ blk_st.fs }}px;--fsl:{{ blk_st.fsl }}px;--mwidth:50px;" {{ block.shopify_attributes }}>
                        <span class="pd10"><span class="tm days">00</span>{{ 'date_formats.days' | t }}</span>
                        <span class="pd10"><span class="tm hours">00</span>{{ 'date_formats.hours' | t }}</span>
                        <span class="pd10"><span class="tm minutes">00</span>{{ 'date_formats.minuts' | t }}</span>
                        <span class="pd10"><span class="tm seconds">00</span>{{ 'date_formats.seconds' | t }}</span>
                    </countdown-time>
				{%  when 'button' %}
					<div class="mb20 fl{% unless section_st.lefta %} f-jcc{% endunless %}">
						{% if blk_st.btntxt != blank %}                             
							<a class="btn {{ blk_st.btn-size }} {{ blk_st.btn-style }}" {%  if blk_st.newtab1 %}target="_blank"{% endif %} href="{{ blk_st.url }}">{{ blk_st.btntxt }}</a>
						{% endif %}
						{% if blk_st.btntxt1 != blank %}                             
							<a class="btn ml20 {{ blk_st.btn-size }} {{ blk_st.btn-style1 }}" {%  if blk_st.newtab2 %}target="_blank"{% endif %} href="{{ blk_st.url1 }}">{{ blk_st.btntxt1 }}</a>
						{% endif %}
					</div>
				{% endcase %}
			{% endfor %}  
		</div>
	</div> 
</div>

{%- endcapture -%}
