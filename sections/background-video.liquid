{% capture video_banner %}
{% assign section_st = section.settings %}
<div class="sec_cov{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}{% if section_st.bgimg != blank %} bgImg lazyload zi1{% endif %}" style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};"
  {% if section_st.bgimg != blank %}data-bgset="{{ section_st.bgimg | image_url: width: section_st.bgimg.width | image_tag: widths: '400,600,800,1000,1400,1600,2000,2400,3000' | split: 'srcset="' | last | split: '"' | first }}" data-sizes="auto" data-parent-fit="contain"{% endif %}>  
    <div class="{% if section_st.sw %}fw-sec{% if section_st.npd %} npd{% endif %}{% else %}page-width{% endif %}">   
        <div class="video_bnr pr brad of_hidden {% render 'animate-data', css:true, text:true %}" style="--rounded:{{ section_st.rounded }}px">
        {% if section_st.video_url == blank and section_st.mp4url != nil %}
            {%- liquid
               if section_st.mp4urlm != nil 
                  assign desktop = 'db w_100 hide-sm'
                  assign mobile = 'db w_100 hide-md hide-lg'
                else
                  assign desktop = 'db w_100'
                  assign mobile = 'db w_100 hide'
                endif 
            -%}                                 
            {{ section_st.mp4url | video_tag :loop:true, autoplay:true, muted:'muted', class:desktop }}
            {%- if section_st.mp4urlm != nil -%}
              {{ section_st.mp4urlm | video_tag :loop:true, autoplay:true, muted:'muted', class:mobile }}
            {%- endif -%}
        {% else %}              
          {% capture current %}{% cycle 1, 2 %}{% endcapture %}{{ 'hero-apparel-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}               
        {%- if section_st.title != blank or section_st.btntxt != blank -%}
          <div class="vdtWrap fl">
              <div class="fl m_auto w_100 f-jcc f-aie {{ section_st.text_align }} {% render 'animate-data', css:true %}" style="max-width:{{ section_st.cntwd }}px;">
                  <div class="video_txt{% if section_st.align %} tc{% else %} tl{% endif %}" style="--cl:{{ section_st.txtcl }};--fs:{{ section_st.hdfs }}px;--fsm:{{ section_st.hdfsm }}px;--fw:{{ section_st.fw }};--lh:{{section_st.hdlh }}">
                      {%- if section_st.title != blank -%}<span class="rgTxt{% if section_st.hidet %} hide-sm{% endif %}">{{ section_st.title }}</span>{%- endif -%}
                      {%- if section_st.btntxt != blank %}<br/><a href="{{ section_st.btnurl }}" class="mt15 btn {{ section_st.btn-style }}{% if section_st.hide_btn %} hide-sm{% endif %}">{{ section_st.btntxt }}</a>{%- endif -%}
                  </div>
              </div>
          </div>
        {%- endif -%}                       
        </div>
    </div>
</div>
{% endcapture %}
{{ video_banner | strip_newlines | remove: "  " | remove: "	" }}
