{{ 'customer.css' | asset_url | stylesheet_tag }}
{% assign section_st = section.settings %}
<div class="sec_cov" style="--sbg:{{ section.settings.bg }};--sst:{{ section.settings.sst }}px;--ssb:{{ section.settings.ssb }}px;--sstm:{{ section.settings.sstm }}px;--ssbm:{{ section.settings.ssbm }}px">  
    <div class="page-width" style="--cl:{{ section_st.cl }};--fbg:{{ section_st.fbg }};--bd:{{ section_st.bd }};max-width:600px;">
        <h1 class="page-title {{ settings.title_align }}">{{ 'customer.register.page_title' | t }}</h1>
            <div class="customerform form-vertical">
              {% form 'create_customer' %}
              {{ form.errors | default_errors }}
              <div class="grid">
                <div class="gitem wd50-md">
                  <label for="FirstName" class="hide">{{ 'customer.register.first_name' | t }}</label>
                  <input type="text" name="customer[first_name]" placeholder="{{ 'customer.register.first_name' | t }}" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>
                </div> 
                <div class="gitem wd50-md">
                  <label for="LastName" class="hide">{{ 'customer.register.last_name' | t }}</label>
                  <input type="text" name="customer[last_name]" placeholder="{{ 'customer.register.last_name' | t }}" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>
                </div>
              </div>
              <label for="Email" class="hide">{{ 'customer.register.email' | t }}</label>
              <input type="email" name="customer[email]" id="Email" placeholder="{{ 'customer.register.email' | t }}" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

              <label for="CreatePassword" class="hide">{{ 'customer.register.password' | t }}</label>
              <input type="password" name="customer[password]" placeholder="{{ 'customer.register.password' | t }}" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

              <p>
                <input type="hidden" name="customer[accepts_marketing]" value="">           
                <label for="accepts_marketing" class="fl">
                   <input type="checkbox" id="accepts_marketing" name="customer[accepts_marketing]" class="custCheck" checked="checked">
                  <span class="checkbox"></span>  {{ 'customer.register.accepts_marketing' | t }}</label>
              </p>                   
                <button type="submit" class="btn {{ section_st.btnd }} {{ section_st.btnsz }} w_100">{{ 'customer.register.submit' | t }}</button>
              {% endform %}          
            </div>
    </div>
</div>
<script src="{{ 'customer.js' | asset_url }}" defer="defer"></script>
