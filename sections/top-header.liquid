{%- capture site_top_header -%}
{%- assign section_st = section.settings -%}
{%- if section.blocks.size > 0 -%}
<div class="sec_cov border-bottom zi5{% if section_st.hidem %} hide-sm{% endif %}{% if section_st.hided %} hide-md hide-lg{% endif %}" style="--sbg:{{ section_st.bg }};--sst:{{ section_st.sst }}px;--ssb:{{ section_st.ssb }}px;--sstm:{{ section_st.sstm }}px;--ssbm:{{ section_st.ssbm }}px;--cl:{{ section_st.cl }};--clh:{{ section_st.clh }};--fs:{{ section_st.fs }}px;--fsm:{{ section_st.fs }}px;--fw:{{ section_st.fw }};--lh:1.2;--icns:{{ section_st.icns}}px;--bg:{{ section_st.bg }};--border:{{ section_st.btmbd }};--gap:10px;--gapm:7px;">
    <div class="{% if section_st.sw %}fw-sec{% else %}page-width{% endif %} top_hdr rgTxt gap zi6 pr fl f-col f-row-md f-aic{% if section_st.tu %} ttu{% endif %}">
        {%- for block in section.blocks limit: section.blocks.size -%}
            {%- assign blk_st = block.settings -%}
            {%- if block.type == 'menu' -%}
                <div class="tmenu fl1 f-aic {{ blk_st.al }}{% if blk_st.hdm %} hide-sm hide-md{% endif %}">
                    {%- for link in linklists[blk_st.menu].links -%}
                        <a href="{{ link.url }}">{{ link.title }}</a>{% unless forloop.last %}<span></span>{% endunless %}
                    {%- endfor -%}
                </div>
            {%- elsif block.type == 'text' and blk_st.txt != blank -%}
                <div class="ttxt fl1 {{ blk_st.al }} fl f-aic{% if blk_st.hdm %} hide-sm hide-md{% endif %} gap f-wrap" style="--gap:15px;--gapm:8px;">
                      <p class="m0"> {%- if blk_st.image != blank -%} <img class="mr5" src="{{ blk_st.image | image_url: width: '36' }}" width="16" height="16" alt="{{ blk_st.image.alt | default: blk_st.txt | escape }}" /> {%- endif -%} {{ blk_st.txt }}</p>
                      <p> {%- if blk_st.image1 != blank -%} <img class="mr5" src="{{ blk_st.image1 | image_url: width: '36' }}" width="16" height="16" alt="{{ blk_st.image.alt | default: blk_st.txt1 | escape }}" /> {%- endif -%} {{ blk_st.txt1 }}</p>
                </div>
            {%- elsif block.type == 'sc' -%}
                <div class="tscl fl1 {{ blk_st.al }}{% if blk_st.hdm %} hide-sm hide-md{% endif %}">
                    {% render 'social-media' %}
                </div>
            {%- elsif block.type == 'cl' -%}
                <div class="tcrlg fl1 {{ blk_st.al }} fl f-aic gap{% if blk_st.hdm %} hide-sm hide-md{% endif %}" style="gap:15px;">
                    {%- if blk_st.menu != blank -%}
                        <div class="tmenu f-aic">{% for link in linklists[blk_st.menu].links %}<a href="{{ link.url }}">{{ link.title }}</a>{% unless forloop.last %}<span></span>{% endunless %}{% endfor %}</div>
                        <span class="dbi devider"></span>
                    {%- endif -%}
                    {%- if blk_st.sc -%}{% render 'social-media' %}<span class="dbi devider{% if blk_st.txt == blank %} hide-sm hide-md{% endif %}"></span>{%- endif -%}
                    {%- if blk_st.txt != blank -%}<div class="txt">{{ blk_st.txt }}</div><span class="dbi hide-sm hide-md devider"></span>{%- endif -%}
                    {% if settings.mlcurrency or settings.mlLang %}{% render 'currencyLang' %}{% endif %}
                </div>
            {%- endif -%}
        {%- endfor -%}
    </div>
</div>
{%- endif -%}
{%- endcapture -%}
{{- site_top_header | strip_newlines | remove: "	" | remove: "  " -}}
