{%- capture page_banner -%}
{% assign section_st = section.settings %}
    <div class="sec_cov npd"  style="--sbg:{% if section_st.bgg != blank %}{{ section_st.bgg }}{% else %}{{ section_st.bg }}{% endif %};">  
         <div class="overlay" style="--overlay:{{ section_st.overlay | color_modify: 'alpha', section_st.overlay_op }};">
            {%- if article.image != blank -%}
                {{ article.image | image_url: width:article.image.width | image_tag: width:article.image.width, height:article.image.height, class:'imgFt heroImg' , widths:"400,600,800,1000,1200,1400,1600,2000,2400,3000" }}
            {%- endif -%}
         </div>
            {%- if section.blocks.size > 0 -%}
               <div class="hero_wrap fl{% if section_st.text-align %} f-jcc tc{% endif %} f-aic m_auto" style="--mht:{{ section_st.hit }}px;--mhtt:{{ section_st.hitt }}px;--mhtm:{{ section_st.hitm }}px;--mwd:{{ section_st.cntwd }}px;">
                    <div class="pr zi1 {% render 'animate-data', css:true %}">
                        {%- for block in section.blocks -%}
                            {% assign block_st = block.settings %}
                            {% if block.type == 'title' %} 
                                <h2 class="rgTxt {{ block_st.tff}} mb{{ block_st.mbm }} mb{{ block_st.mb }}-md{% if block_st.tuu %} ttu{% endif %}" style="--cl:{{block_st.cl }};--fs:{{ block_st.fts }}px;--fsm:{{ block_st.ftsm }}px;--fw:{{ block_st.fw }};--lh:{{block_st.lh }}" {{ block.shopify_attributes }}>{{ article.title }}</h2>
                            {% elsif block.type == 'detail' %}
                                {% if block_st.date or block_st.author or blog.comments_enabled? %}
                                    <ul class="fl{% if section_st.text-align %} f-jcc tc{% else %} tl{% endif %} artDet mb{{ block_st.mbm }} mb{{ block_st.mb }}-md{% if block_st.post_case %} ttu{% endif %}" style="--cl:{{ block_st.cl }};--adfs:{{ block_st.fs }}px;--adfsm:{{ block_st.fsm }}px;--icns:14px;" {{ block.shopify_attributes }}>
                                      {% if block_st.date %}
                                          <li>
                                          <span class="sep-{{ block_st.post_sep }}">{% if block_st.post_sep == '1' %}{% render 'icon-date' %} {% elsif block_st.post_sep == '2'%} 〡 {% elsif block_st.post_sep == '3' %} ● {% elsif block_st.post_sep == '4' %} ━ {% endif %}</span>         
                                          <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time></li>
                                      {% endif %}
                                      {% if block_st.author %}                                          
                                         <li>
                                            <span class="sep-{{block_st.post_sep }}">{% if block_st.post_sep == '1' %}{% render 'icon-user' %} {% elsif block_st.post_sep == '2'%} 〡 {% elsif block_st.post_sep == '3' %} ● {% elsif block_st.post_sep == '4' %} ━ {% endif %}</span>           
                                            <span>{{ 'blogs.article.by_author' | t }} <span>{{ article.author }}</span></span></li>
                                      {% endif %}
                                      {% if blog.comments_enabled? and article.comments_count > 0 %}
                                      <li class="cmnt fl"> 
                                            <span class="sep-{{ block_st.post_sep }}">{% if block_st.post_sep == '1' %}{% render 'icon-comment' %} {% elsif block_st.post_sep == '2'%} 〡 {% elsif block_st.post_sep == '3' %} ● {% elsif block_st.post_sep == '4' %} ━ {% endif %}</span>           
                                            <a href="{{ article.url }}#comments">{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}</a></li>                                                                              
                                      {% endif %}
                                    </ul>
                                {% endif %}                          
                            {% elsif block.type == 'bc' %}
                                <nav class="breadcrumb inline fl f-wrap f-aic f-jcc{% if block_st.hidemb %} hide-sm{% endif %}" role="navigation" aria-label="breadcrumbs" style="--cl:{{ block_st.cl }};--fs:{{ block_st.fs }}px;--fsm:{{ block_st.fsm }}px">
                                    <a href="{{ routes.root_url }}" title="{{ 'general.breadcrumbs.home_link_title' | t }}">{{ 'general.breadcrumbs.home' | t }}</a>
                                    <span class="barr" aria-hidden="true"><svg class="at-icon arw right"><use xlink:href="#icon-arrow"></use></svg></span>
                                    {{ blog.title | link_to: blog.url }}
                                       <span class="barr" aria-hidden="true"><svg class="at-icon arw right"><use xlink:href="#icon-arrow"></use></svg></span>
                                    <span class="fwm">{{ article.title }}</span>
                                </nav>
                                <script type="application/ld+json">
                                    {
                                        "@context": "https://schema.org",
                                        "@type": "BreadcrumbList",
                                        "itemListElement": [
                                            {
                                                "@type": "ListItem",
                                                "position": 1,
                                                "item": {
                                                    "@id": "{{ routes.root_url }}",
                                                    "name": "{{ 'general.breadcrumbs.home' | t }}"
                                                }
                                             }
                                             ,{
                                                "@type": "ListItem",
                                                "position": 2,
                                                "item": {
                                                  "@id": "{{ blog.url }}",
                                                  "name": "{{ blog.title }}"
                                                }
                                             }
                                             {% if current_tags %}
                                                ,{
                                                    "@type": "ListItem",
                                                    "position": 3,
                                                    "item": {
                                                        "@id": "{{ blog.url }}",
                                                        "name": "{{ current_tags | join: " + " }}"
                                                    }
                                                }
                                             {% endif %}
                                        ]
                                    }
                                    </script>
                            {% endif %}
                            {% if block.type == 'title' or block.type == 'detail' %}
                            <style>
                                {% if block.type == 'title' %}.blog_listview .blogTtl{display:none}{% endif %}
                                {% if block.type == 'detail' %}.blog_listview .artDet{display:none}{% endif %}
                            </style>
                            {% endif %}
                        {%- endfor -%}          
                    </div>
                </div>
            {%- endif -%}        
    </div>
{%- endcapture -%}
{{ page_banner | strip_newlines | remove: "  " | remove: "	" }}
