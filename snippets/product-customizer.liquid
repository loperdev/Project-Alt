        setTimeout(() => sendInitializationMessage(), 1000);
      }

    } catch (error) {
      if (customizerState.retryCount < customizerState.maxRetries) {
        customizerState.retryCount++;
        setTimeout(() => openCustomizer(), 2000);
        return;
