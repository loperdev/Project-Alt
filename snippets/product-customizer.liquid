  function processOrderMessage(event) {
    if (event.origin !== "https://lankylemon-2fe9e.web.app") {
      return;
    }

    switch (event.data.type) {
      case 'PRESET_RECEIVED':
        break;

      case 'PRESET_APPLIED':
        break;

      case 'PRESET_ERROR':
        break;

      case 'ORDER_SUBMITTED':
        handleOrderSubmission(event.data);
        break;

