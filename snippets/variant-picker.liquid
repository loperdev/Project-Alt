{%- liquid
  assign section_id = section_id | default: section.id
  assign update_url = update_url | default: true
  assign product_form_id = product_form_id | default: 'product-form'
-%}

{%- unless product.has_only_default_variant -%}
  {%- capture product_variant_data -%}
  <variant-selects class="no-js-hidden" data-section="{{ section_id }}" data-url="{{ product.url }}" data-update-url="{% if update_url %}true{% else %}false{% endif %}" {{ block.shopify_attributes }}>
    {%- for option in product.options_with_values -%}
      {%- liquid
        assign option_index = option.position | minus: 1
        assign is_color = false
        assign is_frame = false
        assign is_orientation = false
        assign is_size = false
        assign option_name = option.name | downcase
        assign color_options = settings.colorOpt | downcase | replace:", ","," | replace:" , ","," | replace:" ,","," | split: ","
        assign frame_options = 'frame,framing,frame type,frame style' | split: ','
        assign orientation_options = 'orientation,orient,layout' | split: ','
        assign size_options = settings.sizeOpt | downcase | replace:", ","," | replace:" , ","," | replace:" ,","," | split: ","
        
        for value in option.values
           if value.swatch.image or value.swatch.color or color_options contains option_name
            assign is_color = true
          endif
        endfor
        
        for frame_option in frame_options
          if option_name contains frame_option
            assign is_frame = true
            break
          endif
        endfor

        for orientation_option in orientation_options
          if option_name contains orientation_option
            assign is_orientation = true
            break
          endif
        endfor

        for size_option in size_options
          if option_name contains size_option
            assign is_size = true
            break
          endif
        endfor

        assign sizechart = false
        assign downcased_option = option.name | downcase
        if size_options contains downcased_option
            assign sizechart = true
        endif
      -%}
      {%- capture sizechartlink -%}
        {%- if sizechart -%}
            <a href="{{ pages[settings.sizechart_page].url }}" class="sizechart-link" target="_blank">
