        "id": "gapm",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Gaps (Mobile)",
        "default": 10
      },
      {
        "type": "text",
        "id": "pdm",
        "label": "Padding",
        "default": "0",
        "info": "Top Right Bottom Left ex: 5px 10px 5px 10px"
      },
      {
        "type": "text",
        "id": "mrm",
        "label": "Margin",
        "default": "0",
        "info": "Top Right Bottom Left ex: 5px 10px 5px 10px"
      },
      {
        "type": "text_alignment",
        "id": "alignm",
        "label": "Alignment mobile",
        "default": "center"
      },
      {
        "type": "header",
        "content": "General"
