{% liquid
  assign blk_st = block.settings
%}
{%- capture styles -%}
--cl_bg:{% if blk_st.bgg != blank %}{{ blk_st.bgg }}{% else %}{{ blk_st.bg }}{% endif %};
--gr_pd:{{ blk_st.pd }};--gr_pdm:{{ blk_st.pdm }};--gr_mr:{{ blk_st.mr }};--gr_mrm:{{ blk_st.mrm }};
--gap:{{ blk_st.gap }}px;--gapm:{{ blk_st.gapm }}px;
{%- endcapture -%}
<div id="{{ block.id }}" class="flbox fl gap {{ blk_st.directionm }} {{ blk_st.justifym }} {{ blk_st.alignim }} {{ blk_st.direction }} {{ blk_st.justify }} {{ blk_st.aligni }}{% if blk_st.wrap %} f-wrap{% endif %} {{ blk_st.rounded }} t-{{ blk_st.alignm }} t-{{ blk_st.align }}-md" style="{{ styles | strip_newlines }}" {{ block.shopify_attributes }}>
    {% content_for 'blocks' %}
</div>
{% schema %}
  {
    "name": "Group",
    "tag": null,
    "blocks": [
      { "type": "@app" },
      { "type": "group" },
      { "type": "heading" },
      { "type": "text" },
      { "type": "button" },
      { "type": "devider" },
      { "type": "countdown" },
      { "type": "image" },
      { "type": "video" },
      { "type": "icon" },
      { "type": "collection" },
      { "type": "product" }
    ],
    "settings": [
      {
        "type": "header",
        "content": "Layout Option"
      },
      {
          "type": "select",
          "id": "direction",
          "label": "Direction",
          "default": "f-row-md",
          "options": [
              { "label": "Row - horizontal", "value": "f-row-md" },
              { "label": "Column - vertical", "value": "f-col-md" },
          ]
      },
      {
          "type": "select",
          "id": "justify",
          "label": "Justify Content",
          "default": "f-jcs-md",
          "options": [
              { "label": "Start", "value": "f-jcs-md" },
              { "label": "Center", "value": "f-jcc-md" },
              { "label": "End", "value": "f-jce-md" },
              { "label": "Space Between", "value": "f-jcsb-md" },
              { "label": "Space Around", "value": "f-jcsa-md" },
              { "label": "Space Evenly", "value": "f-jcse-md" }
