        "content": "Layout Option for Mobile"
      },
      {
          "type": "select",
          "id": "directionm",
          "label": "Direction",
          "default": "f-row",
          "options": [
              { "label": "Row - horizontal", "value": "f-row" },
              { "label": "Column - vertical", "value": "f-col" },
          ]
      },
      {
          "type": "select",
          "id": "justifym",
          "label": "Justify Content",
          "default": "f-jcs",
          "options": [
              { "label": "Start", "value": "f-jcs" },
              { "label": "Center", "value": "f-jcc" },
              { "label": "End", "value": "f-jce" },
              { "label": "Space Between", "value": "f-jcsb" },
