          "type": "select",
          "id": "aligni",
          "label": "Align Items",
          "default": "f-ais-md",
          "options": [
              { "label": "Start", "value": "f-ais-md" },
              { "label": "Center", "value": "f-aic-md" },
              { "label": "End", "value": "f-aie-md" },
              { "label": "Stretch", "value": "f-aist-md" }
          ]
      },
      {
          "type": "checkbox",
          "id": "wrap",
          "label": "Wrap Items",
          "default": false
