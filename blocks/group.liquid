          "options": [
              { "label": "Start", "value": "f-ais" },
              { "label": "Center", "value": "f-aic" },
              { "label": "End", "value": "f-aie" },
              { "label": "Stretch", "value": "f-aist" }
          ]
      },
      {
          "type": "checkbox",
          "id": "wrapm",
          "label": "Wrap Items",
          "default": false
      },
      {
